@model FinalProject_GymManagement.Data.Entities.Subscriptions

@{
    ViewData["Title"] = "Edit Subscription";
}

<h2>Edit Subscription</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Code" />

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfMonths" class="control-label"></label>
        <input asp-for="NumberOfMonths" class="form-control" />
        <span asp-validation-for="NumberOfMonths" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeekFrequency" class="control-label"></label>
        <input asp-for="WeekFrequency" class="form-control" />
        <span asp-validation-for="WeekFrequency" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalNumberOfSessions" class="control-label"></label>
        <input asp-for="TotalNumberOfSessions" class="form-control" />
        <span asp-validation-for="TotalNumberOfSessions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPrice" class="control-label"></label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted" class="control-label"></label>
        <input asp-for="IsDeleted" class="form-control" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>


    <button type="button" id="saveChanges">Save Changes</button>

    <a asp-action="GetAllSubscriptions" class="btn btn-secondary">Back to List</a>

    
    <form asp-controller="Subscription" asp-action="SoftDelete" method="post">
        <input type="hidden" name="code" value="@Model.Code" />
        <button type="submit">Soft Delete</button>
    </form>
</form>

<script>
    document.getElementById("saveChanges").addEventListener("click", function () {
        // Perform AJAX request to save changes
        var formData = new FormData(document.getElementById("editForm"));

        // Adjust the URL to your controller action that handles saving changes
        var url = '@Url.Action("Edit", "Subscription")';

        // Use Fetch API for AJAX request
        fetch(url, {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                // Handle success
                console.log('Data saved successfully:', data);

                // After saving, you can navigate back to the "AllSubscriptions" view
                window.location.href = '@Url.Action("GetAllSubscriptions", "Subscription")';
            })
            .catch(error => {
                // Handle error
                console.error('Error saving data:', error);
            });
    });
</script>